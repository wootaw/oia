<div class="panel panel-default panel-params bg-dark">
  <div class="panel-heading dker">
    <h4>Parameters</h4>
  </div>
  <table class="table table-striped m-b-none">
    <tbody>
      <% parameters.each do |param| %>
      <tr>
        <td class="<%= location_color(param.location) %>">
          <i class="fa fa-lv"></i>
          <span><%= param.name %></span>
          <% if param.required %>
            <i class="fa fa-circle text-success pull-right text-xxs m-t-sm"></i>
          <% end %>
        </td>
        <td>
          <b><%= param.summary %></b><br/>
          <%= markdown(param.raw_description(change)) %>
        </td>
        <td><%= param.data_type %><% if param.array %>[]<% end %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>