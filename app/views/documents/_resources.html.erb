<% resources.each do |res| %>
<% parameters = res.the_parameters(change) %>
<% responses = res.the_responses(change) %>
<div id="<%= res.slug %>" class="panel panel-res">
  <div class="panel-heading bg-green dk">
    <div class="clearfix">
      <div class="clear">
        <div class="h3 m-t-xs m-b-sm">
          <span><%= document.summary %></span>
          <span class="sep">/</span>
          <span><%= res.summary %></span>
          <button class="btn m-b-xs btn-xs btn-warning pull-right" v-showmodal="{id: '#resource-modal', data: {slug: '<%= res.slug %>', tab: 'comments', resource_id: '<%= res.id %>'}}">
            <i class="fa fa-comments m-r-xs"></i><%= res.comments.count %>
          </button>
        </div>
        <span class="label <%= method_color(res.method) %> pull-left m-r-sm"><%= res.method %></span>
        <span class="label pull-left"><%= colour_path(res.path, parameters).html_safe %></span>
      </div>
    </div>
  </div>
  <div class="panel-body no-padder">
    <div class="wrapper bg-light"><%= markdown(res.raw_description(change)) %></div>
    <%= render partial: "documents/parameters", locals: { parameters: parameters, change: change } %>
    <%= render partial: "documents/responses", locals: { responses: responses, change: change } %>
  </div>
</div>
<% end %>