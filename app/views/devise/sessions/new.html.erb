<div class="m-center padder-sm sign-box">
  <div class="m-b-sm">
    <h3 class="txt-center">Good afternoon! Welcome back.</h3>
  </div>
  <div class="txt-center m-b-xl">
    <span>Sign into your account here:</span>
  </div>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "m-b-xl" }) do |f| %>
    <div class="input-group m-b">
      <span class="input-group-addon"><i class="fa fa-envelope"></i></span>
      <%= f.email_field :email, autofocus: true, class: "form-control input-lg", placeholder: "Email" %>
    </div>
    <div class="input-group m-b">
      <span class="input-group-addon"><i class="fa fa-lock"></i></span>
      <%= f.password_field :password, autocomplete: "off", class: "form-control input-lg", placeholder: "Password" %>
    </div>
    <div class="m-b-md txt-right">
      <%= link_to "Forgotten password?", new_user_password_path %>
    </div>
    <div class="m-b">
      <%= f.submit "Sign in", class: "btn-lg btn-success w-full" %>
    </div>
    <% if devise_mapping.rememberable? -%>
      <div class="checkbox">
        <label class="i-checks">
          <%= f.check_box :remember_me %><i></i> Remember me
        </label>
      </div>
    <% end -%>
  <% end %>
  <div class="m-b-xl txt-center">
    <span class="divider-txt">
      <span>You can also choose:</span>
    </span>
  </div>
  <div class="row">
    <div class="col-md-6 m-b">
      <a class="btn btn-dark btn-lg btn-github w-full"><i class="fa fa-github"></i> GitHub</a>
    </div>
    <div class="col-md-6 m-b">
      <%= link_to "Sign up", new_user_registration_path, class: "btn btn-info btn-lg btn-github w-full" %>
    </div>
  </div>
</div>