<div class="m-center padder-sm sign-box">
  <div class="m-b-sm">
    <h3 class="txt-center">Forgot your password?</h3>
  </div>
  <div class="txt-center m-b-xl">
    <span>We'll email you instructions on how to reset it.</span>
  </div>
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { class: "m-b-xl", method: :post }) do |f| %>
    <div class="input-group m-b">
      <span class="input-group-addon"><i class="fa fa-envelope"></i></span>
      <%= f.email_field :email, autofocus: true, class: "form-control input-lg", placeholder: "Email" %>
    </div>
    <div class="m-b">
      <%= f.submit "Send me reset password instructions", class: "btn-lg btn-info w-full" %>
    </div>
  <% end %>
  <div class="m-b-md txt-center">
    Already have an account? <%= link_to "Sign in", new_user_session_path %>
  </div>
</div>