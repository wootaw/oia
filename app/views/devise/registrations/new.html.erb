<div class="m-center padder-sm sign-box">
  <div class="m-b-sm">
    <h3 class="txt-center">Waiting for you for a long time.</h3>
  </div>
  <div class="txt-center m-b-xl">
    <span>Sign up for free API document!</span>
  </div>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "m-b-xl" }) do |f| %>
    <div class="input-group m-b">
      <span class="input-group-addon"><i class="fa fa-envelope"></i></span>
      <%= f.email_field :email, autofocus: true, class: "form-control input-lg", placeholder: "Email" %>
    </div>
    <div class="input-group m-b">
      <span class="input-group-addon"><i class="fa fa-lock"></i></span>
      <%= f.password_field :password, autocomplete: "off", class: "form-control input-lg", placeholder: "Password(#{@minimum_password_length} characters minimum)" %>
    </div>
    <div class="input-group m-b">
      <span class="input-group-addon"><i class="fa fa-check"></i></span>
      <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control input-lg", placeholder: "Input again" %>
    </div>
    <div class="m-b">
      <%= devise_error_messages! %>
      <%= f.submit "Create your account", class: "btn-lg btn-success w-full" %>
    </div>
  <% end %>
  <div class="m-b-md txt-center">
    By creating an account, you agree to our <a href="#">Terms</a>
  </div>
  <div class="m-b-md txt-center">
    Already have an account? <%= link_to "Sign in", new_user_session_path %>
  </div>
</div>